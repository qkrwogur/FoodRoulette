<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/MainEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/MainImageButton"
        app:layout_constraintHorizontal_chainStyle="packed"

        android:text="검색"
        android:textSize="30dp" />
    <ImageButton
        android:id="@+id/MainImageButton"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/MainEdit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/MainEdit"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:src="@drawable/serachbtn"
        />

    <Button
        android:id="@+id/korea"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="한식"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/japan"
        app:layout_constraintTop_toBottomOf="@id/MainEdit" />

    <Button
        android:id="@+id/japan"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="일식"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toLeftOf="@id/chain"
        app:layout_constraintLeft_toRightOf="@id/korea"
        app:layout_constraintTop_toBottomOf="@id/MainEdit" />
    <Button
        android:id="@+id/chain"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="중식"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toLeftOf="@id/western"
        app:layout_constraintLeft_toRightOf="@id/japan"
        app:layout_constraintTop_toBottomOf="@id/MainEdit" />
    <Button
        android:id="@+id/western"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="양식"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/chain"
        app:layout_constraintTop_toBottomOf="@id/MainEdit" />

    <Button
        android:id="@+id/flour"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="분식"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/korea"
        app:layout_constraintRight_toRightOf="@id/korea"
        app:layout_constraintTop_toBottomOf="@+id/korea" />

    <Button
        android:id="@+id/alone"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="혼밥"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/japan"
        app:layout_constraintRight_toRightOf="@id/japan"
        app:layout_constraintTop_toBottomOf="@+id/japan" />

    <Button
        android:id="@+id/delivery"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="배달"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/chain"
        app:layout_constraintRight_toRightOf="@id/chain"
        app:layout_constraintTop_toBottomOf="@id/chain" />

    <Button
        android:id="@+id/asia"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="아시아"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/western"
        app:layout_constraintRight_toRightOf="@id/western"
        app:layout_constraintTop_toBottomOf="@id/western" />

    <Button
        android:id="@+id/fast"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="패스트푸드"
        android:textSize="10sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/korea"
        app:layout_constraintRight_toRightOf="@id/korea"
        app:layout_constraintTop_toBottomOf="@+id/flour" />

    <Button
        android:id="@+id/latenihgt"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="야식"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/japan"
        app:layout_constraintRight_toRightOf="@id/japan"
        app:layout_constraintTop_toBottomOf="@+id/alone" />

    <Button
        android:id="@+id/cafe"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="카페"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/chain"
        app:layout_constraintRight_toRightOf="@id/chain"
        app:layout_constraintTop_toBottomOf="@id/delivery" />

    <Button
        android:id="@+id/pig"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="족발, 보쌈"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/western"
        app:layout_constraintRight_toRightOf="@id/western"
        app:layout_constraintTop_toBottomOf="@id/asia" />

    <Button
        android:id="@+id/steamedsoup"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="찜 , 탕"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/korea"
        app:layout_constraintRight_toRightOf="@id/korea"
        app:layout_constraintTop_toBottomOf="@+id/fast" />

    <Button
        android:id="@+id/box"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="도시락"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/japan"
        app:layout_constraintRight_toRightOf="@id/japan"
        app:layout_constraintTop_toBottomOf="@id/latenihgt" />

    <Button
        android:id="@+id/chicken"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="치킨"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/chain"
        app:layout_constraintRight_toRightOf="@id/chain"
        app:layout_constraintTop_toBottomOf="@id/cafe" />

    <Button
        android:id="@+id/pizza"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="피자"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/western"
        app:layout_constraintRight_toRightOf="@id/western"
        app:layout_constraintTop_toBottomOf="@id/pig" />

    <Button
        android:id="@+id/all"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="모든 식당"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/map"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/steamedsoup" />

    <Button
        android:id="@+id/roulette1"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="돌림판"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/roulette2"
        app:layout_constraintLeft_toRightOf="@id/all"
        app:layout_constraintTop_toBottomOf="@id/box" />

    <Button
        android:id="@+id/ladder1"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="사디리"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/ladder2"
        app:layout_constraintLeft_toRightOf="@id/roulette1"
        app:layout_constraintTop_toBottomOf="@id/chicken" />

    <Button
        android:id="@+id/no"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/myinformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ladder1"
        app:layout_constraintTop_toBottomOf="@id/pizza" />

    <Button
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="홈"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/map" />

    <Button
        android:id="@+id/map"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="지도"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/home"
        app:layout_constraintRight_toLeftOf="@id/roulette2"
        />

    <Button
        android:id="@+id/roulette2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="돌림판"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/map"
        app:layout_constraintRight_toLeftOf="@id/ladder2"/>

    <Button
        android:id="@+id/ladder2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="돌림판"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/roulette2"
        app:layout_constraintRight_toLeftOf="@id/myinformation"/>

    <Button
        android:id="@+id/myinformation"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:text="내정보"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ladder2"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>